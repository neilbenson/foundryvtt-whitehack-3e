<h3 style="color: dark{{rollResultColour}};">
  {{#if (eq rollFor 'SAVINGTHROW')}}
  Saving throw vs target {{rollTarget}}
  {{else}}
  {{rollFor}} task roll vs target {{rollTarget}}
  {{/if}}
  - {{resultCategory}}
</h3>
{{!-- {{{rollTemplate}}} --}}
<div class="message-content">
  <div class="dice-roll">
    <div class="dice-result">
      <div class="dice-formula">{{formula}}</div>
      <div class="dice-tooltip" style="display: none;">

        <div class="dice">
          <header class="part-header flexrow">
            <span class="part-formula">{{formula}}</span>

            <span class="part-total">{{rollResult}}</span>
          </header>
          <ol class="dice-rolls">
            <li class="roll die d20">{{diceOne}}</li>
            {{#if diceTwo}}
            <li class="roll die d20">{{diceTwo}}</li>
            {{/if}}
          </ol>
        </div>

      </div>

      <h4 class="dice-total">{{rollResult}}</h4>
    </div>
  </div>
</div>